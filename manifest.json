{
  "name": "Web Accessibility Checker",
  "description": "Scan the current page for common accessibility issues and get easy, plain-English fixes.",
  "version": "0.3.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Accessibility Checker",
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
